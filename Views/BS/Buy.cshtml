@model UrbanNest.ViewModels.PropertyViewModel
@{
    ViewBag.Title = "Buy";
}



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Buy Properties</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center mb-5">Buy Properties</h1>

        <!-- Recent Properties Section -->
        <section>
            <h2 class="mb-4">Recent Properties</h2>
            <div class="row">
                @foreach (var property in Model.RecentProperties)
                {
                    <div class="col-md-4 mb-4">
                        <div class="card">
                            <img src="@Url.Content(property.ImagePath)" class="card-img-top" alt="Property Image">
                            <div class="card-body">
                                <h5 class="card-title">@property.Title</h5>
                                <p class="card-text">@property.Description</p>
                                <p class="card-text"><strong>Location:</strong> @property.Location</p>
                                <p class="card-text"><strong>Price:</strong> @property.Price</p>
                                <p class="card-text"><strong>Area:</strong> @property.Area sqft</p>
                                <p class="card-text"><strong>Bed:</strong> @property.Bed</p>
                                <p class="card-text"><strong>Bath:</strong> @property.Bath</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </section>

        <!-- Search Properties Section -->
        <section class="mt-5">
            <h2 class="mb-4">Search Properties</h2>
            <form method="post" action="@Url.Action("Search", "Property")">
                <div class="row">
                    <div class="col-md-3 mb-3">
                        <label for="Location" class="form-label">Location</label>
                        <input type="text" class="form-control" id="Location" name="Location" value="@Model.SearchCriteria.Location">
                    </div>
                    <div class="col-md-3 mb-3">
                        <label for="Price" class="form-label">Max Price</label>
                        <input type="text" class="form-control" id="Price" name="Price" value="@Model.SearchCriteria.Price">
                    </div>
                    <div class="col-md-3 mb-3">
                        <label for="Bed" class="form-label">Min Beds</label>
                        <input type="number" class="form-control" id="Bed" name="Bed" value="@Model.SearchCriteria.Bed">
                    </div>
                    <div class="col-md-3 mb-3">
                        <label for="Bath" class="form-label">Min Baths</label>
                        <input type="number" class="form-control" id="Bath" name="Bath" value="@Model.SearchCriteria.Bath">
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Search</button>
            </form>

            <!-- Search Results Section -->
            <section class="mt-5">
                <h2 class="mb-4">Search Results</h2>
                <div class="row">
                    @foreach (var property in Model.SearchResults)
                    {
                        <div class="col-md-4 mb-4">
                            <div class="card">
                                <img src="@Url.Content(property.ImagePath)" class="card-img-top" alt="Property Image">
                                <div class="card-body">
                                    <h5 class="card-title">@property.Title</h5>
                                    <p class="card-text">@property.Description</p>
                                    <p class="card-text"><strong>Location:</strong> @property.Location</p>
                                    <p class="card-text"><strong>Price:</strong> @property.Price</p>
                                    <p class="card-text"><strong>Area:</strong> @property.Area sqft</p>
                                    <p class="card-text"><strong>Bed:</strong> @property.Bed</p>
                                    <p class="card-text"><strong>Bath:</strong> @property.Bath</p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </section>
        </section>
    </div>
</body>
</html>


