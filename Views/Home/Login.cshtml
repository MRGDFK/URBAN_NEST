@{
    ViewBag.Title = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .container {
            max-width: 850px;
            
        }

        .form-section {
            background-color: white;
            padding: 30px;
            margin-top:80px;
            margin-bottom:100px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

            .form-section h2 {
                font-size: 2rem;
                font-weight: bold;
                color: #004d40;
            }

            .form-section .btn-primary {
                background-color: #0a3d62;
                border: none;
            }

                .form-section .btn-primary:hover {
                    background-color: #031c33;
                }

        .social-login {
            display: flex;
            justify-content: center;
            align-items: center;
            margin-top: 20px;
        }

        .divider1 {
            
            height: 150px;
            width: 1px;
            background-color: #6c757d;
            margin: 55px 7px;
            
        }

        .divider2 {
            height: 150px;
            width: 1px;
            background-color: #6c757d;
            margin: 40px 7px;
        }

        .or {
           
            
            font-weight: bold;
            padding: 30px 0;
            
        }

        .social-login-buttons {
            text-align: center;
            margin-top: -470px;
            margin-left: 20px;
        }

        .social-login .btn-block {
            width: 80%;
            position: relative;
        }

            .social-login .btn-block .btn-icon {
                max-height: 30px; 
                margin-right: 10px;
            }

        .row {
            margin-top: 80px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="form-section">
                    <h2 class="text-center">Login</h2>
                    <p class="text-center">Don't have an account? <a href="~/Views/Home/Signup.cshtml">Sign up</a></p>
                    <form>
                        <div class="form-group">
                            <label for="email">Email address</label>
                            <input type="email" class="form-control" id="email" placeholder="Email address">
                        </div>
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input type="password" class="form-control" id="password" placeholder="Password">
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">Login</button>
                    </form>
                </div>
            </div>
            <div class="col-md-6">
                <div class="divider1"></div>
                <span class="or">or</span>
                <div class="divider2"></div>
                <div class="social-login">
                    <div class="social-login-buttons">
                        <div class="btn-group btn-block">
                            <button type="button" class="btn btn-outline-dark">
                                <img src="~/Content/search.png" alt="Google Icon" class="btn-icon d-inline-block align-middle">
                                CONTINUE WITH GOOGLE
                            </button>
                        </div>
                        <div class="btn-group btn-block mt-3">
                            <button type="button" class="btn btn-outline-dark">
                                <img src="~/Content/facebook.png" alt="Facebook Icon" class="btn-icon d-inline-block align-middle">
                                CONTINUE WITH FACEBOOK
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
